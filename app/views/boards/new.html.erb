<h2>New Board</h2>

<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
       <h2><%= pluralize(@board.errors.count, "error") %>
       prohibited this project from being saved:</h2>
     <ul>
       <% @board.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
    </div>
  <% end %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end %>
